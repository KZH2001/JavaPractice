package primeNumber;

import java.util.Scanner;

public class PrimeNumber {
	private Scanner scanner = new Scanner(System.in);

	
	public static void main(String[] args) {
	
		PrimeNumber start = new PrimeNumber();
		start.launch();
	}
	
	
//	start program
	private void launch() {
		showMessage("Check Prime Number");
//		get number from user
		boolean again = true;
		
		while(again) {
			int i = getUserInput("Enter number : ");
			for (i = 2; i > 0; i++) {
				
			}
			System.out.printf("You choose number %d ", i);
			System.out.println("");
		}
	}
	
	
//	show message
	private void showMessage(String message) {
		System.out.println("-------------------------");
		System.out.println(message);
		System.out.println("-------------------------");
	}
	

	
	//get number
	private int getUserInput(String name) {
		System.out.println(name);
		var input =	scanner.nextLine();
		return Integer.parseInt(input);
		
		
	}
	
	
}
