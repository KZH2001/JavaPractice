package primeNumber;

import java.util.Scanner;

public class PrimeNumber {
	private Scanner scanner = new Scanner(System.in);

	
	public static void main(String[] args) {
	
		PrimeNumber start = new PrimeNumber();
		start.launch();
	}
	
	boolean isPrime = true;;
	
	
//	start program
	private void launch() {
		boolean startAgain = true;
		showMessage("Check Prime Number");
		
		
		while(startAgain) {
			boolean isPrime = true;
			int i= getUserInput("Enter Your Number : ");
			 if (i <= 1) {
		            isPrime = false;
		        } else {
		            for (int j = 2; j < i; j++) {
		                if (i % j == 0) {
		                    isPrime = false;
		                    break;

		                }
		            }
		        }
			 if(isPrime) {
				 System.out.printf("%d is a prime number%n" ,i);
			 }else {
				 System.out.printf("%d is not a prime number%n", i);
			 }
			 startAgain = askAgain();
			 
		
		}
	}
	
	 private boolean askAgain() {
		 System.out.println("Do you want to start again? (y or others)");
		 var input = scanner.nextLine();
		 return "y".equalsIgnoreCase(input);

	 }
	
	
//	show message
	private void showMessage(String message) {
		System.out.println("-------------------------");
		System.out.println(message);
		System.out.println("-------------------------");
	}
	

	
	//get number
	private int getUserInput(String name) {
		System.out.print(name);
		var input =	scanner.nextLine();
		return Integer.parseInt(input);
		
		
	}
	
	
}
