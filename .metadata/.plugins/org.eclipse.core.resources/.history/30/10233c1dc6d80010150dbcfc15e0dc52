package primeNumber;

import java.util.Scanner;

public class PrimeNumber {
	private Scanner scanner = new Scanner(System.in);

	
	public static void main(String[] args) {
	
		PrimeNumber start = new PrimeNumber();
		start.launch();
	}
	
	boolean isPrime = true;;
	
	
//	start program
	private void launch() {
		showMessage("Check Prime Number");
//		get number from user
		
		while(true) {
			boolean isPrime = true;

			int i= getUserInput("Enter number : ");
			 if (i <= 1) {
		            isPrime = false;
		        } else {
		            for (int j = 2; j < i; j++) {
		                if (i % j == 0) {
		                    isPrime = false;

		                }
		            }
		        }
			 if(isPrime) {
				 System.out.printf("%d is a Prime Number" ,i);
			 }else {
				 System.out.printf("%d is not a Prime Number", i);
			 }
			
		}
	}
	
	
//	show message
	private void showMessage(String message) {
		System.out.println("-------------------------");
		System.out.println(message);
		System.out.println("-------------------------");
	}
	

	
	//get number
	private int getUserInput(String name) {
		System.out.print(name);
		var input =	scanner.nextLine();
		return Integer.parseInt(input);
		
		
	}
	
	
}
